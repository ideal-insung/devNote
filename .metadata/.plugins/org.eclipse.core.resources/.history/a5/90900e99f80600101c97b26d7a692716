	public void dfs_stack(LinkedListGraph lls,int start) {
		LinkedList<Integer>[] array = lls;
		Stack<Integer> stack = new Stack<Integer>();
		boolean visited [] = new boolean[lls.array.length];
		System.out.println(visited.length);
		stack.push(start);
		visited[start] =true;
		while(!stack.empty()) {
			int popData = stack.pop();
			System.out.println("popData == > " + popData);
			for(int a : lls.array[popData]) {
				if(!visited[a]) {
					visited[a] = true;
					stack.pop();
				}
			}
		}
	}
	
	
}
