import java.util.Scanner;

public class Main {
	//첫째 줄에 (a+b)%c, 둘째 줄에 ((a%c) + (b%c))%c, 셋째 줄에 (a×b)%c, 넷째 줄에 ((a%c) × (b%c))%c를 출력한다.
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		long a = sc.nextLong();
		
		long b = sc.nextLong();
		long c = sc.nextLong();

		System.out.println("\\    /\"");
		System.out.println("  )  ( ')");
		System.out.println(" (  /  )");
		System.out.println("  \(__)|"");
		/*    \    /\  
		 *     )  ( ')
		 *    (  /  )
		 *     \(__)|
		 *    
		 * */
	}

}
